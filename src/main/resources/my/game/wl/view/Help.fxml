<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="1000.0" stylesheets="@GameTheme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="my.game.wl.view.HelpController">
   <center>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <center>
            <ImageView fx:id="helpImage" cache="true" fitHeight="400.0" fitWidth="800.0" pickOnBounds="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../../../../images/G.png" />
               </image>
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
         </center>
         <top>
            <Label fx:id="helpTitle" styleClass="label-subheader" text="Game Rule:" BorderPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="18.0" />
               </font>
               <BorderPane.margin>
                  <Insets left="30.0" />
               </BorderPane.margin>
            </Label>
         </top>
         <bottom>
            <Label fx:id="helpDesc" styleClass="label-content" text="Defend against enemy attack. The enemy will march towards you continuously, survive and achieve the highest score for as long as possible. The game is over once the enemy crosses the defense line (red)." wrapText="true" BorderPane.alignment="CENTER_LEFT">
               <BorderPane.margin>
                  <Insets left="30.0" right="30.0" />
               </BorderPane.margin>
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </bottom>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </BorderPane>
   </center>
   <top>
      <Label styleClass="label-header" text="Help" BorderPane.alignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
         <BorderPane.margin>
            <Insets top="25.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button mnemonicParsing="false" onAction="#handleExitHelp" text="Exit Help" ButtonBar.buttonData="LEFT" />
          <Button fx:id="prevButton" disable="true" mnemonicParsing="false" onAction="#previousHelpPage" text="Prev" ButtonBar.buttonData="RIGHT" />
            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextHelpPage" text="Next" ButtonBar.buttonData="RIGHT" />
        </buttons>
         <BorderPane.margin>
            <Insets bottom="5.0" left="30.0" right="30.0" top="5.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
